{
  "name": "instagram-video-downloader",
  "version": "1.0.0",
  "description": "Aplicativo para download de v√≠deos do Instagram",
  "main": "main.js",
  "author": "Lairton",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "moviepy": "^1.0.3",
    "requests": "^2.25.1"
  },
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6"
  },
  "build": {
    "appId": "com.lairton.instadownloader",
    "productName": "Insta Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "downloader.py"
    ],
    "extraResources": [
      {
        "from": "downloader.py",
        "to": "downloader.py"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}